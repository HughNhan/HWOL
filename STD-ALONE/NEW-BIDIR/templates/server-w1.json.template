{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "$IDX-server-w1",
    "namespace": "default"
  },
  "spec": {
    "restartPolicy": "Never",
    "nodeSelector": {
      "kubernetes.io/hostname": "worker-1"
    },
    "containers": [
      {
        "args": [
            "uperf -s -P 31${IDX}00"
        ],
        "command": [
            "/bin/sh",
            "-c"
        ],
        "name": "1-server",
        "image": "quay.io/hnhan/ocp-tools:uperf",
        "imagePullPolicy": "Always",
        "securityContext": {
           "privileged": true
        },
        "env": [
          {
            "name": "cpu_partitioning",
            "value": "0"
          }
        ]
      }
    ]
  }
}
