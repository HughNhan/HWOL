{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "2-server-w4",
    "namespace": "default"
  },
  "spec": {
    "restartPolicy": "Never",
    "nodeSelector": {
      "kubernetes.io/hostname": "worker-4"
    },
    "containers": [
      {
        "args": [
            "uperf -s -P 34200"
        ],
        "command": [
            "/bin/sh",
            "-c"
        ],
        "name": "server-2",
        "image": "quay.io/hnhan/ocp-tools:uperf",
        "imagePullPolicy": "Always",
        "securityContext": {
           "privileged": true
        },
        "env": [
          {
            "name": "cpu_partitioning",
            "value": "0"
          }
        ]
      }
    ]
  }
}
